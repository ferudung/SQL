--1111TABLO OLUSTURMA--
CREATE TABLE student
(
id CHAR(4),
name VARCHAR(20),
age NUMBER
);

--VERI GIRISI--
INSERT INTO student VALUES ('1001','MEHMET ALA',25);
INSERT INTO student VALUES ('1002','AYSE',12);

--TABLODAN VERÝ SORGUSU--
SELECT * FROM student;

--TABLO SILME--
DROP TABLE student;

--PARCALI VERI GIRISI--
INSERT INTO student(id, name) VALUES('1003','FATMA');

--veri tabaninda urunler adýnda bir tablo olusturun.
--urun_id=>number
--urun_adi=>VARCHAR(50)
--FÝYAT=>NUMBER

CREATE TABLE urunler
(
urun_id number,
urun_adi VARCHAR(50),
fiyat NUMBER
);

INSERT INTO urunler VALUES ('1001','kola',5);
INSERT INTO urunler VALUES ('1002','cips',3);

SELECT * FROM urunler;
